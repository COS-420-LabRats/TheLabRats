<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RU_Orange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Shows Profile Pic and Name at the top -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/RU_Teal">
            <!-- Shows Profile Pic at the top -->
            <ImageView
                android:id="@+id/ProfilePic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/empty_pic"/>
            <!-- Shows Name at the top -->
            <TextView
                android:id="@+id/Loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ProfilePic"
                android:padding="15dp"
                android:textAlignment="center"
                android:text="FULL NAME HERE"
                android:textSize="16dp"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <!-- Area to edit profile -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:background="@color/white">

            <!-- Edit Name -->
            <ImageView
                android:id="@+id/pic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_pic"/>

            <TextView
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/pic"
                android:layout_marginStart="50dp"
                android:text="First Name"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/pic"
                android:layout_marginStart="50dp"
                android:layout_below="@+id/first_name"
                android:layout_marginTop="15dp"
                android:text="Last Name"
                android:textSize="18sp"/>
            <View
                android:id="@+id/divider_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/last_name"
                android:background="@color/RU_Grey"/>

            <!-- Edit Account Type -->
            <ImageView
                android:id="@+id/acc_type"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_name"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_acc"/>

            <TextView
                android:id="@+id/acc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/acc_type"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider_name"
                android:layout_marginTop="20dp"
                android:text="Account Type"
                android:textSize="18sp"/>
            <View
                android:id="@+id/divider_acc"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/acc_txt"
                android:background="@color/RU_Grey"/>

            <!-- Edit Birthday -->
            <ImageView
                android:id="@+id/birthday"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_acc"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_birthday"/>

            <TextView
                android:id="@+id/bday_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/birthday"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider_acc"
                android:layout_marginTop="20dp"
                android:text="Birthday"
                android:textSize="18sp"/>
            <View
                android:id="@+id/divider_bday"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/bday_txt"
                android:background="@color/RU_Grey"/>

            <!-- Edit Email -->
            <ImageView
                android:id="@+id/email"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_bday"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_email"/>

            <TextView
                android:id="@+id/email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/email"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider_bday"
                android:layout_marginTop="20dp"
                android:text="Email"
                android:textSize="18sp"/>
            <View
                android:id="@+id/divider_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/email_txt"
                android:background="@color/RU_Grey"/>

            <!-- Edit Phone -->
            <ImageView
                android:id="@+id/phone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_email"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_phone"/>

            <TextView
                android:id="@+id/phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/phone"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider_email"
                android:layout_marginTop="20dp"
                android:text="Phone"
                android:textSize="18sp"/>
            <View
                android:id="@+id/divider_phone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/phone_txt"
                android:background="@color/RU_Grey"/>

            <!-- Edit Gender -->
            <ImageView
                android:id="@+id/gender"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_phone"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_gender"/>

            <TextView
                android:id="@+id/gender_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/gender"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider_phone"
                android:layout_marginTop="20dp"
                android:text="Gender"
                android:textSize="18sp"/>
            <View
                android:id="@+id/divider_gender"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/gender_txt"
                android:background="@color/RU_Grey"/>

            <!-- Edit Biography -->
            <ImageView
                android:id="@+id/bio"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_gender"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_biography"/>

            <TextView
                android:id="@+id/bio_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/bio"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider_gender"
                android:layout_marginTop="20dp"
                android:text="Biography"
                android:textSize="18sp"/>
            <View
                android:id="@+id/divider_bio"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/bio_txt"
                android:background="@color/RU_Grey"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>