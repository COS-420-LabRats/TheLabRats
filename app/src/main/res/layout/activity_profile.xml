<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ProfileContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlueGrey"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Shows Profile Pic and Name at the top -->

        <!-- Area to edit profile -->
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="275dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/top_profile_background">
            <!-- Shows Profile Pic at the top -->
            <ImageButton
                android:id="@+id/ProfilePicButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/empty_pic"
                android:contentDescription="@string/profile_pic" />
            <!-- Shows Name at the top -->
            <TextView
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ProfilePicButton"
                android:padding="15dp"
                android:text="@string/full_name_txt"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:background="@color/white">

            <!-- Edit Name -->
            <ImageView
                android:id="@+id/ic_pic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_pic"
                android:contentDescription="@string/full_name_txt"/>
            <TextView
                android:id="@+id/fNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/ic_pic"
                android:layout_marginStart="50dp"
                android:text="First Name:"
                android:textSize="18sp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/ic_pic"
                android:layout_marginStart="50dp"
                android:layout_below="@+id/fNameTxt"
                android:text="@string/first_name_txt"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/lNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/fNameTxt"
                android:layout_marginStart="150dp"
                android:text="Last Name:"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/last_name"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/first_name"
                android:layout_marginStart="150dp"
                android:layout_below="@+id/lNameTxt"
                android:text="@string/last_name_txt"
                android:textSize="18sp"/>
            <View
                android:id="@+id/divider_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/first_name"
                android:background="@color/charcoal"/>

            <!-- Edit Account Type -->
            <ImageView
                android:id="@+id/ic_acc"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_name"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_acc"
                android:contentDescription="@string/acc_txt"/>

            <TextView
                android:id="@+id/accTxt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/ic_acc"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider_name"
                android:layout_marginTop="20dp"
                android:text="Account Type:"
                android:textSize="18sp"/>

            <Spinner
                android:id="@+id/accountType"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height= "50dp"
                android:layout_alignStart="@+id/ic_acc"
                android:layout_marginStart="50dp"
                android:layout_below="@id/accTxt"
                android:entries="@array/accountTypes"
                android:textSize="18sp"/>

            <View
                android:id="@+id/divider_acc"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/accountType"
                android:background="@color/charcoal"/>

            <!-- Edit Birthday -->
            <ImageView
                android:id="@+id/ic_birthday"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_acc"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_birthday"
                android:contentDescription="@string/bday_txt"/>

            <TextView
                android:id="@+id/birthdayTxt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/ic_birthday"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider_acc"
                android:layout_marginTop="20dp"
                android:text="Birthday:"
                android:textSize="18sp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/ic_birthday"
                android:layout_marginStart="50dp"
                android:layout_below="@id/birthdayTxt"
                android:inputType="date"
                android:text="@string/bday_txt"
                android:textSize="18sp"/>
            <View
                android:id="@+id/divider_birthday"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/birthday"
                android:background="@color/charcoal"/>

            <!-- Edit Email -->
            <ImageView
                android:id="@+id/ic_email"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_birthday"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_email"
                android:contentDescription="@string/email_txt"/>

            <TextView
                android:id="@+id/emailTxt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/ic_email"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider_birthday"
                android:layout_marginTop="20dp"
                android:text="Email:"
                android:textSize="18sp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/ic_email"
                android:layout_marginStart="50dp"
                android:layout_below="@id/emailTxt"
                android:inputType="textEmailAddress"
                android:text="@string/email_txt"
                android:textSize="18sp"/>
            <View
                android:id="@+id/divider_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/email"
                android:background="@color/charcoal"/>

            <!-- Edit Phone -->
            <ImageView
                android:id="@+id/ic_phone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_email"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_phone"
                android:contentDescription="@string/phone_txt"/>
            <TextView
                android:id="@+id/phoneTxt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/ic_phone"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider_email"
                android:layout_marginTop="20dp"
                android:text="Phone:"
                android:textSize="18sp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/ic_phone"
                android:layout_marginStart="50dp"
                android:layout_below="@id/phoneTxt"
                android:inputType="phone"
                android:text="@string/phone_txt"
                android:textSize="18sp"/>
            <View
                android:id="@+id/divider_phone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/phone"
                android:background="@color/charcoal"/>

            <!-- Edit Gender -->
            <ImageView
                android:id="@+id/ic_gender"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_phone"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_gender"
                android:contentDescription="@string/gender_txt"/>

            <TextView
                android:id="@+id/genderTxt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/ic_gender"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider_phone"
                android:layout_marginTop="20dp"
                android:text="Gender:"
                android:textSize="18sp"/>

            <Spinner
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/ic_gender"
                android:layout_marginStart="50dp"
                android:layout_below="@id/genderTxt"
                android:text="@string/gender_txt"
                android:textSize="18sp"
                android:entries="@array/genderTypes"/>
            <View
                android:id="@+id/divider_gender"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/gender"
                android:background="@color/charcoal"/>

            <!-- Edit Biography -->
            <ImageView
                android:id="@+id/ic_bio"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_gender"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_biography"
                android:contentDescription="@string/bio_txt"/>

            <TextView
                android:id="@+id/bioTxt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/ic_bio"
                android:layout_marginStart="50dp"
                android:layout_below="@id/divider_gender"
                android:layout_marginTop="20dp"
                android:text="Biography:"
                android:textSize="18sp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/biography"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/ic_bio"
                android:layout_marginStart="50dp"
                android:layout_below="@id/bioTxt"
                android:text="@string/bio_txt"
                android:textSize="18sp"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:maxLines="10"
                android:scrollbars="vertical"/>
            <View
                android:id="@+id/divider_bio"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/biography"
                android:background="@color/charcoal"/>

            <Button
                android:id="@+id/save_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/divider_bio"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="@string/save_button"
                app:backgroundTint="@null"
                android:background="@drawable/lavender_round_button"
                android:padding="6dp"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
</RelativeLayout>

